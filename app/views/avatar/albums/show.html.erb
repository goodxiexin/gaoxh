<% content_for :left do %>
  <%= render :partial => '/app_menu' %>
<% end %>

<% subject = get_subject @user %>
<%= link_to "热门相片", hot_personal_albums_url(:id => @user.id) %> |
<%= link_to "最新相册", recent_personal_albums_url(:id => @user.id) %> |
<%= link_to "#{subject}的相册", personal_albums_url(:id => @user.id) %> |
<% if @user == current_user %>
  <%= link_to "好友相册" %> |
<% end %>
<%= link_to "#{subject}的相关相片" %> |
<% if @user == current_user %>
  <%= link_to "上传照片", new_personal_photo_url(:album_id => @album.id) %> |
  <%= link_to "新专辑", new_personal_album_url, :rel => 'facebox' %>
<% end %>

<div class='crumb'>
<div class='left'>
  <%= link_to "#{subject}的照片", personal_albums_url(:id => @user.id) %> -> <%= "#{@album.title}" %>
</div>
<div class='right'>
  <%= link_to "更改头像", new_avatar_url(:album => 1), :rel => 'facebox' %>
</div>
</div>

<% i = 0 %>
<table class='photo-list'>
<% @album.photos.each do |p| %>
  <% if i == 0 %>
    <tr>
  <% end %>
  <td>
    <%= photo_link p %><p>
    <% if @user == current_user %>
      <% if @user.avatar != p %>
        <%= link_to_remote '头像', :url => set_avatar_url(p) %> |
      <% end %>
      <%= link_to '编辑', edit_avatar_url(p), :rel => 'facebox' %>|
      <% if @user.avatar != p %>
        <%= facebox_confirm '删除', avatar_url(p), {:msg => "你确定要删除这个头像吗?", :method => :delete} %>
      <% end %>  
    <% end %>
  </td>
  <% i = i + 1 %>
  <% if i== 4 %>
    <% i = 0 %>
    <tr/>
  <% end %>
<% end %>
</table>

<p class="albumTime">
  <span class="time-update"><%= ftime @album.updated_at %>更新</span><br/>
  <span class="time-create"><%= ftime @album.created_at %>创建</span>
</p>

<div id='comments'>
  <%= render :partial => 'avatar/album_comments/comment', :collection => @comments %>
</div>

<div class='msg-body'>
  <% form_remote_for :comment, :url => avatar_album_comments_url(@album) do |f| %>
  <div class='composer'>
    <%= hidden_field_tag 'comment[recipient_id]', @user.id%>
    <%= f.text_area 'content', :rows => 5, :cols => 75 %>
  </div>
  <div class='emotion'>
    <%= emotion_link "comment_content" %>
  </div>
  <div class='button'>
    <%= f.submit '提交', :class => 'confirm-button' %>
    <%= f.label '悄悄话' %><%= f.check_box 'whisper' %>
  </div>
  <% end %>
</div>

