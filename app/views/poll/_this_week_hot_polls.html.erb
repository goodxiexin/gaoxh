<% polls = Poll.find(:all, :limit => 10, :conditions => ["created_at BETWEEN ? AND ?", 1.week.ago.beginning_of_day.to_s(:db), Time.now.to_s(:db)], :order => 'subscribers_count DESC') %>
<div class='blog-right-bar'>
  <h3>本周十大投票</h3>
  <% polls.each do |poll| %>
    <%= link_to (truncate poll.name, 20), poll_url(poll) %> 
    <span class='poll-tiny'> by </span>
    <%= link_to_user poll.user %><br/>
  <% end %> 
</div>

