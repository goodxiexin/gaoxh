<ul>
<% @friends.each do |f| %>
	<li id='friend_<%= f.id %>'>
		<div class="box04 card">
			<div class="img">
				<div class="middle"><div class="middle-center"><div class="center">
					<%= avatar f %>
				</div></div></div>
			</div>
			<div class="info">
				<h4><%= profile_link f %></h4>
				<div class="selector01">
					<%= f.games.map(&:name).join(',') %>
				</div>
			</div>
			<div>
				<%= facebox_confirm 'x', friend_url(f), {:method => :delete, :msg => "你确定要和他解除好友关系吗?"} %> 
			</div>
    </div>
  </li>
<% end %>
</ul>

<% if @remote %>
  <%= will_paginate friends, :renderer => 'RemoteLinkRenderer', :remote => @remote %>
<% else %>
  <%= will_paginate friends %>
<% end %>
