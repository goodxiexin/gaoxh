<% content_for :left do %>
  <%= render :partial => 'user/personal/icon_left' %><br/>
  <%= render :partial => 'user/personal/character_left' %><br/>
<% end %>

<% content_for :right do %>
  <%= render :partial => 'user/personal/resources_right' %><br/>
<% end %>

<strong><%= @user.login %>:</strong>
<% unless @user.latest_status.blank? %>
  <%= @user.latest_status.content %>
   <span class='status-show-tiny'><%= distance_of_time_in_words_to_now @user.latest_status.created_at %> ago</span>
<% else %>
   <span style="color:grey">这家伙什么都没留下</span>
<% end %> 
<div class='yellow-info'>
    <strong><%= label_tag '', 'do you want to know more about him?' %></strong><br/>
    <%= link_to (image_tag 'add_friend.gif', :style => "border:0px;"), new_friend_request_url(@user), :rel => 'facebox' %> or <strong><%= link_to "send him an email", new_mail_url(:receiver_id => @user.id) %></strong>
</div>

<div class='visitors' style="width:560px;">
<h3>他的好友</h3>
<% i=0 %>
<table>
<% @user.friends[0..17].each do |p| %>
  <% if i == 0 %>
    <tr>
  <% end %>
  <td class='record'>
  <%= user_icon p %><br/>
  <%= link_to_user p %>
  </td>
  <% i = i + 1 %>
  <% if i == 9 %>
    </tr>
    <% i = 0 %>
  <% end %> 
<% end %>
</table>
<div class='view-all'>
  <%= link_to '查看全部', someone_friends_url(:user_id => @user.id) %>
</div>
</div>
