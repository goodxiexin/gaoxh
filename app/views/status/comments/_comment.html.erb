<div class="box04 word-box" id='comment_<%= comment.id %>'>
	<div class="img"><%= avatar comment.poster, :size => :small %></div>
  <div class="word">
    <p><%= profile_link comment.poster %> <span><%= ftime comment.created_at %> -</span> <%= link_to_function '回复' %></p>
    <p><%= comment.content %></p>
  </div>
	<div class='option'>
    <% if comment.whisper %>
      <%= "w" %>
    <% end %>
    <% if @user == current_user || comment.poster == current_user %>
		<% end %>
  </div>
</div>
