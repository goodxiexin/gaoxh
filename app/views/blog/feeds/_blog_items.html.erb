<div>
<% blog_items.each do |b| %>
<div>
	<% blog = b.originator %>
	<%= avatar blog.poster %>
	<%= ftime blog.created_at %>
	<%= blog_link blog %>
</div>
<% end %>
</div>

<% if @remote %>
	<%= will_paginate blog_items, :renderer => :RemoteLinkRenderer, :remote => @remote %>
<% else %>
	<%= will_paginate blog_items %>
<% end %>
