<% delivery = status_feed_delivery %>
<% status = delivery.feed_item.originator %>
<div id='feed_delivery_<%= delivery.id %>'>
	<div><%= avatar status.user %></div>
	<div><%= profile_link status.user %>更新了状态</div>
	<div><%= truncate status.content, 80 %></div>
	<div><%= link_to_remote 'x', :url => feed_delivery_url(delivery), :method => :delete %></div>
	<div><%= ftime delivery.created_at %></div>
</div>
