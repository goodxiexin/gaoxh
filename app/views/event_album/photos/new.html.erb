<% content_for :left do %>
  <%= render :partial => '/app_menu' %>
<% end %>

<div class='crumb'>
  活动<%= event_link @event %> -> <%= album_link @album %> -> 上传照片
</div>  

<h3>上传照片</h3>

<% form_tag create_multiple_event_photos_url(:album_id => @album.id), :multipart => true do %>
  <div id='photos'>
    <% 1.upto(3) do %>
      <%= render :partial => 'photo_upload_form', :object => EventPhoto.new %>
    <% end %>
  </div>
  <%= link_to_function 'add photo' do |page|
        page.insert_html :bottom, :photos, :partial => 'photo_upload_form', :object => EventPhoto.new
      end %>
  <%= submit_tag '上传' %>
<% end %>
