if params[:show].to_i == 0
  page << "facebox.close(); $('status_#{@event.id}').innerHTML = '#{msg params[:participation][:status].to_i}';$('reply_#{@event.id}').innerHTML = '(#{link_to '更改', edit_event_participation_url(@event, @participation, :show => 0), :rel => 'facebox'})';facebox.watchClickEvents();"
elsif params[:show].to_i == 1
  flash[:notice] = "成功提交"
  page.redirect_to event_url(@event)
elsif params[:show].to_i == 2
  page << "alert('成功!'); $('invitation_#{@invitation.id}').remove();"
end

