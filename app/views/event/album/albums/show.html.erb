<% content_for :left do %>
  <%= render :partial => '/app_menu' %>
<% end %>

<div class='crumb'>
  活动<%= event_link @event %> -> 活动相册
</div>

<% if [3,4,5].include? @participation.status %>
  <%= link_to '上传照片', new_event_photo_url(:album_id => @album.id) %>
<% end %>

<% i = 0 %>
<table class='photo-list'>
<% @album.photos.each do |p| %>
  <% if i == 0 %>
    <tr>
  <% end %>
  <td>
    <%= photo_link p %><p>
    <% if @user == current_user %>
      <%= link_to '编辑', edit_event_photo_url(p), :rel => 'facebox' %>|
      <%= facebox_confirm '删除', event_photo_url(p), {:msg => "你确定要删除这张照片吗?", :method => :delete} %>
    <% end %>
  </td>
  <% i = i + 1 %>
  <% if i== 4 %>
    <% i = 0 %>
    <tr/>
<% end %>
<% end %>
</table>

<% if @user == current_user %>
  <%= in_place_text_field @album, :description, {:empty_text => '点击添加相册描述', :url => update_description_event_album_url(@album), :name => 'album[description]', :rows => 2, :cols => 90} %>
<% else %>
  <%= @album.description %>
<% end %>

<p class="albumTime">
  <span class="time-update"><%= ftime @album.updated_at %>更新</span><br/>
  <span class="time-create"><%= ftime @album.created_at %>创建</span>
</p>

<div id='comments'>
  <%= render :partial => 'album/comments/comment', :collection => @comments %>
</div>

<div class='msg-body'>
  <% form_remote_for :comment, :url => event_album_comments_url(@album) do |f| %>
  <div class='composer'>
    <%= hidden_field_tag 'comment[recipient_id]', @user.id%>
    <%= f.text_area 'content', :rows => 5, :cols => 75, :onkeyup => "limit_words_of_text_area(this, 140, $('word_count'));" %>
  </div>
  <div class='button'>
    <%= f.submit '提交', :class => 'confirm-button' %>
    <%= f.label '悄悄话' %><%= f.check_box 'whisper' %>
  </div>
  <div class='word-count' id='word_count'>0/140</div>
  <div class='emotion'><%= emotion_link "comment_content" %></div>
  <% end %>
</div>

