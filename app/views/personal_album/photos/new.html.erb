<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
                <div class="round_m"><div class="round_body">
                    <h1 class="big-photo">照片</h1>
                    <div class="box02 canvas_int">
                        <div class="tab tab01">
													<%= render :partial => 'personal_album/menu' %>
												</div>
                        <div class="box02 appcontent01">
                            <h3>上传照片</h3>
                            <div id="photoUpload" class="photo-form formcontent">
														<% form_tag create_multiple_personal_photos_url(:album_id => @album.id), :multipart => true do %>
															<% 1.upto(3) do %>
																<%= render :partial => 'photo_upload_form', :object => PersonalPhoto.new %>
															<% end %>
															<div id='addFile' class='rows'>
															<%= link_to_function 'add photo' do |page|
																	page.insert_html :bottom, :photos, :partial => 'photo_upload_form', :object => PersonalPhoto.new
																	end %>
															</div>
															<div class="buttons s_clear">
                                <span class="button"><span><%= submit_tag '完成' %></span></span>
																<span class="button button-gray"><span><button type="reset">取消</button></span></span>
                              </div>
														<% end %>
													</div>
                        </div>
                    </div>
						</div></div>
            </div></div></div></div>
        </div>  
